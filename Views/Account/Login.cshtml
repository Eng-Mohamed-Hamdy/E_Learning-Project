@model E_learningPlatform.Models.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<div class="auth-wrapper">
    <div class="container">
        <div class="auth-card">
            <div class="row g-0">
                <div class="col-md-6 auth-sidebar">
                    <h2 class="mb-4">Welcome Back!</h2>
                    <p class="mb-4">Log in to continue your learning journey.</p>
                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3 rounded-circle bg-white p-2">
                                <i class="bi bi-book text-primary"></i>
                            </div>
                            <div>Access all your enrolled courses</div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3 rounded-circle bg-white p-2">
                                <i class="bi bi-award text-primary"></i>
                            </div>
                            <div>Track your progress and achievements</div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="me-3 rounded-circle bg-white p-2">
                                <i class="bi bi-chat-dots text-primary"></i>
                            </div>
                            <div>Connect with instructors and peers</div>
                        </div>
                    </div>
                    <div>
                        <img src="https://placehold.co/400x250?text=Learning+Journey" alt="Learning Journey" class="img-fluid rounded">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="auth-form">
                        <div class="mb-4">
                            <h2 class="fw-bold mb-1">Log In</h2>
                            <p class="text-muted">Enter your credentials to access your account</p>
                        </div>
                        
                        <form id="account" method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-4">
                                <label asp-for="Password" class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
                            </div>
                            
                            <div class="text-center">
                                <p>
                                    Don't have an account? <a asp-action="Register" asp-route-returnUrl='@ViewData["ReturnUrl"]' class="text-decoration-none fw-semibold">Register here</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
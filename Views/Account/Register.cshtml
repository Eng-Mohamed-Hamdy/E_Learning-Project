@* Update the model directive if you moved the ViewModel *@
@model E_learningPlatform.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<p class="lead">Create a new account to access courses.</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" autocomplete="email" aria-required="true" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            @* --- REMOVED Role Dropdown --- *@
            @* --- REMOVED Level Div --- *@
            @* --- REMOVED Subject Div --- *@

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Register</button>

            <div class="mt-3 text-center">
                <p>
                    Already have an account? <a asp-action="Login">Login here</a>
                </p>
            </div>
        </form>
    </div>
    <div class="col-md-6 d-none d-md-block">
        @* Optional: Side panel *@
        <h4>Welcome to E-Learning!</h4>
        <p>Register to start your learning journey.</p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @* --- REMOVED JavaScript for conditional fields --- *@
}
@model IEnumerable<E_learningPlatform.DTO.courseDTO>
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-banner text-white text-center d-flex align-items-center"
         style="background-image: url('@Url.Content("~/heroImage.jpg")');">
    <div class="hero-overlay"></div> 
    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Advance Your Skills with Online Learning</h1>
                <p class="lead mb-4">Access quality education from anywhere in the world. Start your learning journey today with our expert-led courses.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-center">
                    <a asp-controller="Course" asp-action="Index" class="btn btn-primary btn-lg me-md-2 px-4">Explore Courses</a>
                    <a href="#featured-courses" class="btn btn-outline-light btn-lg px-4">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Why Choose Our Platform</h2>
            <p class="text-muted">We provide everything you need to enhance your skills</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-book text-primary fs-1"></i>
                        </div>
                        <h4>Expert Instructors</h4>
                        <p class="text-muted">Learn from industry professionals with real-world experience.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-laptop text-primary fs-1"></i>
                        </div>
                        <h4>Flexible Learning</h4>
                        <p class="text-muted">Study at your own pace, anywhere and anytime.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-trophy text-primary fs-1"></i>
                        </div>
                        <h4>Certification</h4>
                        <p class="text-muted">Earn certificates to showcase your newly acquired skills.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Courses Section -->
<section id="featured-courses" class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Featured Courses</h2>
            <p class="text-muted">Explore our most popular learning opportunities</p>
        </div>
        <div class="row g-4">
            @if (Model != null && Model.Any())
            {
                @foreach (var course in Model)
                {
                    <div class="col-md-4">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(course.Image))
                            {
                                <img src="@course.Image" class="card-img-top" alt="@course.CourseTitle">
                            }
                            else
                            {
                                <img src="https://placehold.co/800x600?text=Course+Image" class="card-img-top" alt="Course image">
                            }
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-accent">Featured</span>
                                    <small class="text-muted"><i class="bi bi-tag me-1"></i> @course.CategoryName</small>
                                </div>
                                <h5 class="card-title">@course.CourseTitle</h5>
                                <p class="text-muted mb-2"><i class="bi bi-person-circle me-1"></i> @course.InstructorName</p>
                                <p class="card-text">@(course.Description?.Length > 100 ? course.Description.Substring(0, 100) + "..." : course.Description)</p>
                            </div>
                            <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center">
                                <span class="fw-bold text-primary">@(course.Price > 0 ? $"${course.Price}" : "Free")</span>
                                <a asp-controller="Course" asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-primary">View Course</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No featured courses available at the moment. Check back soon!</p>
                </div>
            }
        </div>
        <div class="text-center mt-5">
            <a asp-controller="Course" asp-action="Index" class="btn btn-primary">View All Courses</a>
        </div>
    </div>
</section>


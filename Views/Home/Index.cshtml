           <div class="col-md-6 col-lg-3">  
               <div class="card h-100 border-0 shadow-sm text-center">  
                          <div class="card-body">  
                            <img src="~/AhmedAdel.jpg" class="rounded-circle img-fluid mb-3" alt="Instructor Ahmed Adel" style="width: 150px; height: 150px; object-fit: cover;">  
                          <h5 class="card-title fw-bold">Mr. Ahmed Adel</h5>  
                         <p class="text-muted mb-0"><i class="bi bi-lightbulb me-1 text-primary"></i> Science</p>
                   </div>  
                 </div>
           </div>  

           <!-- Instructor 2 -->  
           <div class="col-md-6 col-lg-3">  
               <div class="card h-100 border-0 shadow-sm text-center">  
                   <div class="card-body">  
                       <img src="~/mohamedAhmed.jpg" class="rounded-circle img-fluid mb-3" alt="Instructor Mohamed Ahmed" style="width: 150px; height: 150px; object-fit: cover;">  
                       <h5 class="card-title fw-bold">Mr. Mohamed Ahmed</h5>  
                       <p class="text-muted mb-0"><i class="bi bi-calculator-fill me-1 text-primary"></i> Mathematics</p>  
                   </div>  
               </div>  
           </div>  

           <!-- Instructor 3 -->  
           <div class="col-md-6 col-lg-3">  
               <div class="card h-100 border-0 shadow-sm text-center">  
                   <div class="card-body">  
                       <img src="~/AliceBrown.jpg" class="rounded-circle img-fluid mb-3" alt="Instructor Alice Brown" style="width: 150px; height: 150px; object-fit: cover;">  
                       <h5 class="card-title fw-bold">Alice Brown</h5>  
                       <p class="text-muted mb-0"><i class="bi bi-tree-fill me-1 text-primary"></i> Biology</p>  
                   </div>  
               </div>  
           </div>  

           <!-- Instructor 4 -->  
           <div class="col-md-6 col-lg-3">  
               <div class="card h-100 border-0 shadow-sm text-center">  
                   <div class="card-body">  
                       <img src="~/Sayed.jpg" class="rounded-circle img-fluid mb-3" alt="Instructor Sayed Alaa" style="width: 150px; height: 150px; object-fit: cover;">  
                       <h5 class="card-title fw-bold">Mr. Sayed Alaa</h5>  
                       <p class="text-muted mb-0"><i class="bi bi-book-half me-1 text-primary"></i> History</p>  
                   </div>  
               </div>  
           </div>  

       </div>  
    </div>
    </div> 
</section>

<!-- Call to Action -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="fw-bold mb-3">Ready to Start Learning?</h2>
                <p class="lead mb-4">Join thousands of students already learning on our platform.</p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-4 gap-3">Sign Up Now</a>
                </div>
            </div>
        </div>
    </div>
</section>
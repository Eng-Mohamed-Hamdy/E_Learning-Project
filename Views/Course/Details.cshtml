@model E_learningPlatform.Models.Course

@{
    ViewData["Title"] = Model.CourseTitle ?? "Course Details";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <!-- Left: Course Image and Title -->
        <div class="col-md-4 text-center">
            <img src="~/@Model.Image"
                 alt="@Model.CourseTitle"
                 class="img-fluid rounded mb-3"
                 style="max-height: 300px;">
            <h2 class="h4 fw-bold">@Model.CourseTitle</h2>
            <a asp-controller="Course"
               asp-action="Enroll"
               asp-route-id="@Model.CourseId"
               class="btn btn-success mt-3">
                <i class="bi bi-cart-plus-fill me-1"></i>
                Enroll Now
            </a>
        </div>

        <!-- Right: Lessons Dropdown -->
        <div class="col-md-8 d-flex justify-content-center" style="min-height: 300px;">
            <div class="dropup w-75">
                <button class="btn btn-primary dropdown-toggle w-100"
                        type="button"
                        id="lessonsDropup"
                        data-bs-toggle="dropdown"
                        aria-expanded="false">
                    Course Content
                </button>
                <ul class="dropdown-menu" aria-labelledby="lessonsDropup">
                    @if (Model.lessons != null && Model.lessons.Any())
                    {
                        @foreach (var lesson in Model.lessons.OrderBy(l => l.lessonId))
                        {
                            <li>
                                <a class="dropdown-item" href="#">
                                    @lesson.lessonTitle
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <li>
                            <span class="dropdown-item text-muted fst-italic">
                                No lessons available.
                            </span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

model IEnumerable<E_learningPlatform.DTO.courseDTO>
    @{
        ViewData["Title"] = Model?.CourseTitle ?? "Course Details";
    }

    <div class="container mt-4">
        @if (Model != null)
        {
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow-sm mb-4">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Model.Image" class="card-img-top" alt="@Model.CourseTitle" style="max-height: 400px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h1 class="card-title">@Model.CourseTitle</h1>
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="badge bg-primary fs-5">$@Model.Price.ToString("0.00")</span>
                                <span class="text-muted">Created: @Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="lead">@Model.Description</p>
                            }

                            <h3 class="mt-5">About This Course</h3>
                            <div class="course-content mt-3">
                                <p>Detailed course information would go here...</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm sticky-top" style="top: 20px;">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Course Details</h4>

                            <div class="mb-4">
                                <h5>Instructor</h5>
                                <p>@(Model.InstructorName ?? "Not specified")</p>
                            </div>

                            <div class="d-grid gap-2">
                                @if (Model.Available)
                                {
                                    <a href="/Course/Enroll/@Model.CourseId" class="btn btn-success btn-lg">
                                        <i class="bi bi-check2-circle me-2"></i>Enroll Now
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-lg" disabled>
                                        <i class="bi bi-clock me-2"></i>Coming Soon
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                Course details not found.
            </div>
        }
    </div>

    <style>
        .sticky-top {
            position: -webkit-sticky;
            position: sticky;
        }
    </style>
